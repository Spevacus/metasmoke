<%= form_for @domain, url: url do |f| %>
  <div class="field">
    <%= f.label :domain %><br/>
    <%= f.text_field :domain, class: 'form-control', **(update ? {disabled: true} : {}) %>
  </div><br/>

  <div class="field">
    <%= f.label :whois, 'WHOIS' %><br/>
    <%= f.text_area :whois, rows: 7, cols: 80, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>